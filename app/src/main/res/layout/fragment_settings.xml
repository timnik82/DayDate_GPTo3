<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            style="@style/TextAppearance.AppCompat.Medium"
            android:text="@string/text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <SeekBar
            android:id="@+id/seek_text_size"
            android:max="120"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Switch
            android:id="@+id/switch_random_shift"
            android:text="@string/enable_random_shift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Medium"
            android:text="@string/shift_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp" />

        <SeekBar
            android:id="@+id/seek_shift_x"
            android:max="300"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/TextAppearance.AppCompat.Medium"
            android:text="@string/shift_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp" />

        <SeekBar
            android:id="@+id/seek_shift_y"
            android:max="300"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>